/* pages/myself/myself.wxss */

page {
  height: 100vh;
  background-color:  #f0ece0;
}
/* 整体容器样式 */
.container {
  padding: 0 0 120rpx 0;
  /* background-color: #f6f6f6; */
  background-color:  #f0ece0;
}

/* 用户信息卡片样式 */
.user-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  width: 90%;
  background-color: #ffffff;
  margin-bottom: 20rpx;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.stats {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #888;
}

.diary-count {
  margin-right: 20rpx;
}

/* 日记时间线样式 */
.diary-timeline {
  width: 100%;
  background-color: #f6f6f6;
}

.timeline-header {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

/* 日记项样式 */
.diary-item {
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.diary-header {
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.diary-date {
  display: flex;
  align-items: center;
}

.date {
  font-size: 32rpx;
  font-weight: 500;
  margin-right: 20rpx;
}

.weekday, .lunar {
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
}

.diary-actions {
  display: flex;
  justify-content: flex-end; /* 让按钮从右侧开始排列 */
  margin-left: auto; /* 将按钮推到右边 */
}

.action-btn {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  margin-left: 16rpx;
}

.edit {
  background-color: #e6f7ff;
  color: #1890ff;
}

.delete {
  background-color: #fff1f0;
  color: #ff4d4f;
}

.diary-content {
  padding: 30rpx;
}

.content-preview {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.location {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #888;
  /* margin: 16rpx 0; */
  padding-left: 30rpx;
}

.location-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.image-preview {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}

.image-preview image {
  width: 216rpx;
  height: 216rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

.image-preview image:nth-child(3n) {
  margin-right: 0;
}

.diary-footer {
  display: flex;
  padding: 16rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  font-size: 24rpx;
  color: #999;
}

/* 无日记状态 */
.empty-diary {
  background-color:  #f0ece0;
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.empty-diary image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-diary text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.create-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  background-color: #07c160;
  color: white;
  border-radius: 35rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

/* 悬浮按钮 */
.float-btn {
  position: fixed;
  right: 40rpx;
  bottom: 140rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #07c160;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}

.float-btn image {
  width: 50rpx;
  height: 50rpx;
}

/* 底部导航栏 */
.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  z-index: 10;
}
